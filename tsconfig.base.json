{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@auth/core-login/*": ["libs/auth/core-login/src/lib/*"],
      "@auth/core-session/*": ["libs/auth/core-session/src/lib/*"],
      "@auth/data-session/*": ["libs/auth/data-session/src/lib/*"],
      "@auth/util-test-session": ["libs/auth/util-test-session/src/index.ts"],
      "@shared/core-common/*": ["libs/shared/core-common/src/lib/*"],
      "@shared/data-testutils": ["libs/shared/data-testutils/src/index.ts"],
      "@shared/ui-appbar/*": ["libs/shared/ui-appbar/src/lib/*"],
      "@shared/ui-testutils": ["libs/shared/ui-testutils/src/index.ts"],
      "@shared/util-common/*": ["libs/shared/util-common/src/lib/*"],
      "@shared/util-wrappers/*": ["libs/shared/util-wrappers/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
