      "@shared/feature-testutils": [
        "libs/shared/feature-testutils/src/index.ts"
      ],
      "@shared/ui-appbar": ["libs/shared/ui-appbar/src/index.ts"],
      "@shared/ui-testutils": ["libs/shared/ui-testutils/src/index.ts"],
      "@shared/util-common": ["libs/shared/util-common/src/index.ts"],
      "@shared/util-wrappers": ["libs/shared/util-wrappers/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
