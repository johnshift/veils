      "@auth/data-logout": ["libs/auth/data-logout/src/index.ts"],
      "@auth/data-register": ["libs/auth/data-register/src/index.ts"],
      "@auth/data-session": ["libs/auth/data-session/src/index.ts"],
      "@auth/feature-login-modal": [
        "libs/auth/feature-login-modal/src/index.ts"
      ],
      "@auth/ui-login-form": ["libs/auth/ui-login-form/src/index.ts"],
      "@auth/util-test-login": ["libs/auth/util-test-login/src/index.ts"],
      "@auth/util-test-logout": ["libs/auth/util-test-logout/src/index.ts"],
